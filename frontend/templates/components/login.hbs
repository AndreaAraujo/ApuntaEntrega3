<span>
{{#if isLogged}}
  {{i18n 'Your are logged. Logout first'}}
{{else}}

<div class="container" id="login">

  <center >
      <label for = "logUsuario">{{i18n 'Nombre de usuario'}}:</label>
      <input type="text" name="logUsuario" id ="nombreLogin"><br><br>
      <label for = "conUsuario">{{i18n 'Contraseña'}}:</label>
      <input type="password" name="conUsuario" id="password"><br><br>
      <a href="views/registro.php" id="btnNuevoRegistro">{{i18n '¡Regístrate aquí!' }}</a>
      <button type="submit" class="btn btn-default" id ="loginbutton">{{i18n 'Iniciar sesión' }}</button>
  </center>

</div>



  {{#if registerMode}}

  <div class="container" id="login">
    <center>
        <label for = "logUsuario">{{i18n 'Nombre de usuario' }}:</label>
        <input type="text" name="logUsuario" id="registroNombre">

        <label for = "emailUsuario">{{i18n 'Correo electrónico'}}:</label>
        <input type="text" name="emailUsuario" id="registroEmail">

        <label for = "conUsuario">{{i18n 'Contraseña' }}:</label>
        <input type="password" name="conUsuario" id="registroPassword" maxlength="8">

        <label for = "confirmar">{{i18n 'Confirmar contraseña' }}:</label>
        <input type="password" name="confirmar" maxlength="8" id="registroPassword"><br><br>

        <input type="submit" name="enviar"  id = "btnRegistro" value = "{{i18n 'Registrar'}}">
        <a id="atrasRegistro">{{i18n 'Atrás' }}</a>
    </center>
  </div>

  {{/if}}

{{/if}}
</span>
